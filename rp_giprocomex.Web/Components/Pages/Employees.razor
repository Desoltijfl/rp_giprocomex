@page "/employees"
@using rp_giprocomex.Core.Models
@inject rp_giprocomex.Services.EmployeeService EmployeeService
@inject NavigationManager NavigationManager

<h3>Empleados</h3>

<button class="btn btn-primary mb-2" @onclick="New">Nuevo empleado</button>

@if (employees == null)
{
    <p><em>Cargando...</em></p>
}
else if (!employees.Any())
{
    <p>No hay empleados.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Activo</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in employees)
            {
                <tr>
                    <td>@(e.FirstName + " " + e.LastName)</td>
                    <td>@e.Email</td>
                    <td>@e.Phone</td>
                    <td>@(e.IsActive ? "Sí" : "No")</td>
                    <td>
                        <button class="btn btn-sm btn-secondary" @onclick="@(() => Edit(e.EmployeeId))">Editar</button>
                        <button class="btn btn-sm btn-danger" @onclick="@(() => Delete(e.EmployeeId))">Borrar</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Employee>? employees;

    protected override async Task OnInitializedAsync()
    {
        employees = await EmployeeService.GetAllAsync();
    }

    void New() => NavigationManager.NavigateTo("/employees/edit/0");

    void Edit(int id) => NavigationManager.NavigateTo($"/employees/edit/{id}");

    async Task Delete(int id)
    {
        var confirm = await JSRuntime.InvokeAsync<bool>("confirm", $"Eliminar empleado {id}?");
        if (confirm)
        {
            await EmployeeService.DeleteAsync(id);
            employees = await EmployeeService.GetAllAsync();
            StateHasChanged();
        }
    }

    [Inject] private IJSRuntime JSRuntime { get; set; } = default!;
}