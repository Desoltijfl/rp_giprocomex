@using rp_giprocomex.Web.Shared
@inherits LayoutComponentBase

<div class="layout-root @(sidebarCollapsed ? "sidebar-collapsed" : "")">
    <Sidebar />

    <div class="main-content">
        <header class="main-header">
            <button class="hamburger" @onclick="ToggleSidebar" aria-label="Abrir menú">☰</button>
            <div class="header-title">rp_giprocomex</div>
        </header>

        <div class="content-area">
            @Body
        </div>

        <footer class="main-footer">
            © @DateTime.Now.Year - rp_giprocomex
        </footer>
    </div>
</div>

@code {
    private bool sidebarCollapsed;

    private void ToggleSidebar()
    {
        sidebarCollapsed = !sidebarCollapsed;
    }
}